import java.util.*;

class rough{
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);

        System.out.print("enter the number : ");
        int n = sc.nextInt();
        String s = "";
        int z=0;

        while(n != 0){
            int temp = n%2;
            s += temp;
            n /= 2;    
        }
        
        for(int  i=s.length()-1; i>=0 ; i--){
            System.out.print(s.charAt(i));
        }
    }
}
